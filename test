int		copy_map(t_game *g, int x, int y)
{
	char *tab;
	int i;
	int j;

	i = 0;
	if (!(g->map = (char **)malloc(sizeof(char*) * (y + 1))))
		return (0);
	while (i < y)
	{
		tab = NULL;
		j = 0;
		get_next_line(0, &tab);
		if (!(g->map[i] = (char*)malloc(sizeof(char) * (x + 1))))
			return (0);
		while (j < x)
		{
			g->map[i][j] = tab[j + 4];
			j++;
		}
		g->map[i][j] = '\0';
		// printf("tab= %s, y = %d\n", g->map[i], y);
		free(tab);
		if (!tab)
			return (0);
		i++;
	}
	g->map[i] = NULL;
}